#!/usr/bin/env bash

[ command -v sudo >/dev/null 2>&1 ] && SUDO=sudo || SUDO=doas
case $BUTTON in
	1) st -e nmtui & ;;
	6) st -e $SUDO $EDITOR $0 ;;
esac

wifiicon=$(sed "s/down//;s/up/üì∂ /" /sys/class/net/w*/operstate 2>/dev/null)
vpnicon=$(sed "s/.*/[VPN] /" /sys/class/net/{tun*,*-wg0}/operstate 2>/dev/null)
ethicon=$(sed "s/down//;s/up/üåê /" /sys/class/net/e*/operstate 2>/dev/null)
vpncol="#f9cb8c"

#Neither connected
if [ "$wifiicon" = "$ethicon" ] ; then
	grep -xq '0x1003' /sys/class/net/w*/flags && wifiicon="üì° "
	[ -z $wifiicon ] && wifiicon="‚ùå "
fi

# If ethernet is connected only show ethernet
[ ! -z "$ethicon" ] && wifiicon=""

printf "%s%s%s\n" "$wifiicon" "$ethicon" "^c$vpncol^$vpnicon^d^"

